<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">
    <changeSet author="hubertgaw" id="2">
        <preConditions onFail="CONTINUE">
            <not>
                <tableExists tableName="full_size_pitch"/>
            </not>
        </preConditions>
        <createTable tableName="full_size_pitch">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="full_price" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="half_pitch_price" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="is_full_rented" type="float">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>